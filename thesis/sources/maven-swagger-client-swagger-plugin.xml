<plugin>
    <groupId>io.swagger</groupId>
    <artifactId>swagger-codegen-maven-plugin</artifactId>
    <version>${swagger-maven-plugin.version}</version>
    <executions>
        <execution>
            <id>generate-swagger-integration-database</id>
            <goals>
                <goal>generate</goal>
            </goals>
            <configuration>
                <language>jaxrs-cxf</language>
                <inputSpec>
                  ${basedir}/swagger/api/app-service.json
                </inputSpec>
                <output>
                  ${target}/generated-sources/swagger/app-service
                </output>
                <apiPackage>
                  ${groupId}.app.rest.client.api.service.app
                </apiPackage>
                <modelPackage>
                  ${groupId}.app.rest.client.model.service.app
                </modelPackage>
                <templateDirectory>
                  ${basedir}/swagger/templates
                </templateDirectory>
                <generateSupportingFiles>
                  false
                </generateSupportingFiles>
                <addCompileSourceRoot>
                  false
                </addCompileSourceRoot>
                <modelNamePrefix>App</modelNamePrefix>
                <configOptions>
                    <sourceFolder>/src</sourceFolder>
                    <dateLibrary>java8</dateLibrary>
                </configOptions>
            </configuration>
        </execution>
    </executions>
</plugin>
